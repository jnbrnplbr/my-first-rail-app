<%= form_with(model: supplier) do |form| %>
  <% if supplier.errors.any? %>
  <div class="mt-5">
    <% supplier.errors.each do |error| %>
      <div class="alert alert-warning alert-dismissible fade show font-monospace text-start" role="alert">
        <%= error.full_message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>
<%
=begin%>
 
    <div style="color: red">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div> 
<%
=end%>
  <% end %>

  <div class="py-5 w-25">
    <div class="form-floating mb-3">
      <%= form.text_field :name, class: "form-control font-monospace", id: "floatingInput",   placeholder: "Supplier Name" %>
      <%= form.label :name, for: "floatingInput", class: "font-monospace" %>
    </div>
<%
=begin%>
 
      <div class="form-floating mb-3">
      <%= form.number_field :created_by, class: "form-control font-monospace", id: "floatingInput",   placeholder: "Created By" %>
      <%= form.label :created_by, for: "floatingInput", class: "font-monospace" %>
    </div> 
<%
=end%>

    <div class="d-flex justify-content-between">
      <%= link_to "Back to suppliers", suppliers_path, class: "btn btn-outline-secondary" %>
      <% if request.path.include?"/edit" %>
        <%= link_to "Show suppliers", @supplier, class: "btn btn-outline-success" %>
      <% end %>
      <%= form.submit "Submit", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
