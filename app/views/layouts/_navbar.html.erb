<%
=begin%>
 <header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path, class: "nav-link px-2 text-white" %></li>
        <li><%= link_to "About", about_path, class: "nav-link px-2 text-white" %></li>
      </ul>

      <% if !user_signed_in? %>
        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>
      <% else %>
        <span class="text-white me-3">
          <%= current_user.email %>
        </span>
      <% end %>

      <div class="text-end">
        <% if !user_signed_in? %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light me-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning me-2" %>
        <% else %>
            
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-success me-2" %>
            <%= link_to "Logout", destroy_user_session_path, data: {:confirm => 'Are you sure?'}, :method => :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</header> 
