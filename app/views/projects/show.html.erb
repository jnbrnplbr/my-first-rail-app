        <td>Unit</td>
        <td>Alloted to</td>
        <td>Created by</td>
        <td>Last Update</td>
      </thead>
    </table>
  </div>

  <div class="col-12 col-md-4 col-lg-4 col-xl-4">
    <table class="table table-bordered table-hover font-monospace mt-5">
      <thead>
        <th colspan="5" class="text-lead py-3">Action History</th>
      </thead>
      <thead>
        <th>#</th>
        <th>Action</th>
        <th>Description</th>
        <th>Date</th>
        <th>Updated By</th>
      </thead>
